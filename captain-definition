{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM php:8.2-apache",

    "# Instalar dependencias del sistema",
    "RUN apt-get update",
    "RUN apt-get install -y --no-install-recommends libzip-dev zip unzip git",
    "RUN docker-php-ext-install pdo_mysql zip",
    "RUN rm -rf /var/lib/apt/lists/*",

    "# Instalar Node.js",
    "RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash -",
    "RUN apt-get install -y nodejs",

    "# Instalar Composer",
    "RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer",

    "# Configurar directorio de trabajo",
    "WORKDIR /var/www/html",

    "# 1. PRIMERO copiar solo los archivos necesarios para composer",
    "COPY composer.json composer.lock ./",

    "# 2. Instalar dependencias PHP (sin scripts)",
    "RUN composer install --no-dev --no-scripts --no-autoloader",

    "# 3. AHORA copiar todo el proyecto",
    "COPY . .",

    "# 4. Completar la instalación de Composer",
    "RUN composer dump-autoload --optimize",

    "# Instalar y construir assets de Node",
    "COPY package.json package-lock.json ./",
    "RUN npm install",
    "RUN npm run build",

    "# Mover el manifest si está en .vite",
    "RUN if [ -f \"public/build/.vite/manifest.json\" ]; then mv public/build/.vite/manifest.json public/build/; fi",

    "# Configurar permisos",
    "RUN chown -R www-data:www-data /var/www/html",
    "RUN chmod -R 755 /var/www/html",
    "RUN chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache /var/www/html/public/build",
    "RUN chmod -R 777 /var/www/html/public",

    "# Resto de tu configuración...",
    "RUN a2enmod rewrite",
    "COPY public/.htaccess /var/www/html/.htaccess",
    "COPY docker-entrypoint.sh /usr/local/bin/",
    "RUN chmod +x /usr/local/bin/docker-entrypoint.sh",
    "ENTRYPOINT [\"docker-entrypoint.sh\"]",
    "CMD [\"apache2-foreground\"]"
  ]
}
